{
  "version": "1",
  "services": [
    {
      "type": "web",
      "name": "staff-management-api",
      "runtime": "node",
      "buildCommand": "npm install",
      "startCommand": "node server-new.js",
      "healthCheckPath": "/api/health",
      "plan": "free",
      "envVars": [
        {
          "key": "NODE_ENV",
          "value": "production"
        },
        {
          "key": "DATABASE_NAME",
          "value": "staff_management"
        }
      ]
    }
  ]
}
